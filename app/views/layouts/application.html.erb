<!DOCTYPE html>
<html>
  <head>
    <title>Skillable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <style type="text/css">
      #logo {
        margin-right: 15px;
      }
      a:hover{
        background: none;
      }
    </style>
  </head>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'Skillable', root_path, class: 'navbar-brand mb-0 h1' %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a href="<%= posts_path %>" class='nav-link'><%= fa_icon "files-o" %> Lessons</a>
      </li>
      <li>
        <a href="<%= your_posts_path %>" class='nav-link'><%= fa_icon "file-o" %> Your Lessons</a>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= fa_icon "envelope-o" %>
            Requests
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to("Requests for You", requests_path, class: 'dropdown-item') %>
            <%= link_to("Your Requests", your_requests_path, class: 'dropdown-item') %>
          </div>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav ml-md-auto d-none d-md-flex">
      <% if user_signed_in? %>
        <li class="nav-item">
          <a href="<%= new_post_path %>" class='nav-link'><%= fa_icon "plus" %> Submit a Lesson</a>
        </li>
        <li class="nav-item">
          <a href="<%= profile_settings_path %>" class='nav-link'><%= fa_icon "gears" %> Your Profile</a>
        </li>
        <li class="nav-item">
          <a href="<%= destroy_user_session_path %>" class='nav-link' data-method='delete'><%= fa_icon "sign-out" %> Logout</a>
        </li>
      <% else %>
        <li class="nav-item">
          <a href="<%= new_user_session_path %>" class='nav-link'><%= fa_icon "sign-in" %> Login</a>
        </li>
        <li class='nav-item'>
          <a href="<%= new_user_registration_path %>" class='nav-link'><%= fa_icon "plus" %> Sign Up</a>
        </li>
      <% end %>
    </ul>
</nav>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      </div>
      <%= yield %>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>
