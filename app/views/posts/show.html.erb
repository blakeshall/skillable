<p id="notice"><%= notice %></p>
<%= link_to 'Back', posts_path %>

<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <h2><%= @post.title%></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h4><%= number_to_currency(@post.price) %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p><%= @post.description%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p>Availability: <%= @post.availability%></p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <h3>About the Instructor:</h3>
        <h4><%= @post.user.display_name %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h5>Bio:</h5>
        <p><%= @post.user.bio %></p>
      </div>
    </div>
  </div>
</div>

<% if @post.user == current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
