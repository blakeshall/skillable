<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-mid-12">
    <h1>Lessons</h1>
  </div>
</div>


<div class="row">
  <div class="col-mid-12">
    <ul class="list-inline">
      <li class="list-inline-item"><h5>Categories:</h5></li>
      <li class="list-inline-item"><%= link_to "Clear", posts_path%></li>
      <% Post::CATEGORIES.each do |category| %>
        <li class="list-inline-item"><%= link_to "#{category}", posts_path(filter: category) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-mid-12">
    <table class='table'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Description</th>
          <th>Price</th>
          <th>Availability</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% if @posts.empty? %>
          <td>No lessons matching your criteria.</td>
        <% else %>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.category %></td>
              <td><%= post.description %></td>
              <td><%= number_to_currency(post.price) %></td>
              <td><%= post.availability %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
